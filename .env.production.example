# Production Environment Variables
# Copy this to .env.production for your deployment platform

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DIRECT_DATABASE_URL="postgresql://username:password@host:port/database"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# Cloudinary (Image hosting) - Optional but recommended
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# GCash Payment Gateway (Optional)
NEXT_PUBLIC_GCASH_MERCHANT_ID="your_merchant_id"
GCASH_SECRET_KEY="your_secret_key"

# Node Environment
NODE_ENV="production"
